@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model UserLoginModel

<h4 class="text-center">Giriş yap</h4>
<form method="post" class="mt-2">
    <!-- Email input -->
    <div class="form-outline mb-4">
        <input type="text" asp-for="@Model.Username" class="form-control" />
        <label class="form-label" >Username</label>
    </div>

    <!-- Password input -->
    <div class="form-outline mb-4">
        <input type="password" asp-for="@Model.Password" class="form-control" />
        <label class="form-label" for="form2Example2">Password</label>
    </div>

    <!-- 2 column grid layout for inline styling -->
    <div class="row mb-4">
        <div class="col d-flex justify-content-center">
            <!-- Checkbox -->
            <div class="form-check">
                <input class="form-check-input" type="checkbox" asp-for="@Model.RememberMe" checked />
                <label class="form-check-label" for="form2Example31">Beni hatırla </label>
            </div>
        </div>
    </div>
    <div asp-validation-summary="All"></div>
    <!-- Submit button -->
    <button type="submit" asp-action="Login" asp-controller="Account" asp-route-returnUrl="@ViewBag.ReturUrl" class="btn btn-primary btn-block mb-4">Giriş Yap</button>

</form>