@model AppUserTaskUpdateDto
@{
    Layout = "_Layout";
}

<div class="container">
    <div class="row">
        <div class="form-group col-6">
            <label>Header:<sup>*</sup>:</label>
            <input asp-for="@Model.AppTask.Title" type="text" disabled class="form-control">
        </div>
        <div class="form-group col-6">
            <label>Defination:<sup>*</sup>:</label>
            <input asp-for="@Model.AppTask.Defination" type="text" disabled class="form-control">
        </div>
    </div>
    @await Component.InvokeAsync("TaskFileCommentUploadComponent",Model.Id);
</div>
@section Scripts{
    <script src="/lib/jquery/dist/jquery.js"></script>
    <script>
        $(document).ready(() => {
            $("#btn").click(() => {
                $("#defination").val($("textarea").val());
                console.log($("#defination").val());
            });
            $("#submitBtn").click();
        });

    </script>
}