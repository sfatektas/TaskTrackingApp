<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TaskTrackingApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
            @*<a class="navbar-brand" href="#">Select Bilişim</a>*@
            <a class="navbar-brand w-25" asp-action="Index" asp-controller="Home"><img class="navbar-brand w-100" src="~/photos/SelectLogoK.png" alt="SelectImg" /></a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                <ul class="navbar-nav ">
                    @if (!User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item active text-center ">
                            <a class="nav-link btn btn-secondary text-white" asp-action="Login" asp-controller="Account">Giriş Yap</a>
                        </li>
                    }
                    else
                    {

                        @if (User.IsInRole("Admin"))

                        {
                            <li class="nav-item text-center">
                                <a class="nav-link" asp-action="UserManagment" asp-controller="Admin">Kullanıcı İşlemleri</a>
                            </li>
                            <li class="nav-item text-center">
                                <a class="nav-link" asp-action="TaskManagment" asp-controller="Admin">Task İşlemleri</a>
                            </li>
                            <li class="nav-item text-center">
                                <a class="nav-link"  asp-action="TaskStatues" asp-controller="Admin" >Task Durumları</a>
                            </li>
                        }
                        else
                        {

                            <li class="nav-item text-center">
                                <a class="nav-link" asp-action="MyTasks" asp-controller="User">Tasklarım</a>
                            </li>
                            <li class="nav-item text-center">
                                <a class="nav-link" asp-action="ChangePassword" asp-controller="User">Şifre Değiştir</a>
                            </li>
                        }
                        <li class="nav-item active text-center ">
                            <a class="nav-link btn btn-secondary text-white" asp-action="LogOut" asp-controller="Account">Çıkış Yap</a>
                        </li>
                    }

                </ul>
            </div>
        </div>
    </nav>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - Select Bilişim - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
