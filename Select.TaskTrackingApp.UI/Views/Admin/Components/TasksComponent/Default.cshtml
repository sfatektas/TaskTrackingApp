@model List<AppTaskListDto>

@{
    int count = 0;
}
@{
    <h3 class="text-center">Bekleyen Tasklar</h3>

    if (Model.Count !=0)
    {
        
<table class="table my-3">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Başlık</th>
            <th scope="col">Görev Tanımı</th>
            <th scope="col">Aciliyet</th>
            <th scope="col">İş Durumu</th>
            <th scope="col">Oluşturulma Zamanı</th>
            <th scope="col">Son Teslim Zamanı</th>
            <th scope="col"></th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@(++count)</td>
                <td>@item.Title</td>
                <td>@item.Defination</td>
                <td>@item.PriortryId</td>
                <td>@item.Defination</td>
                <td>@item.CreatedTime</td>
                <td>@item.EndDateTime</td>
                <td><a asp-action="Update" asp-controller="Admin" asp-route-id="@item.Id" class="btn btn-primary">Update</a></td>
                <td><a asp-action="Remove" asp-controller="Admin" asp-route-id="@item.Id" class="btn btn-danger">Remove</a></td>
            </tr>
        }
    </tbody>
</table>
    }
<p class="text-center">Aktif Görev Bulunmamaktadır.</p>

}
